<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Chalkable</title>


</head>

<body>

    {{#each articles}}
    {{#if this.saved}}
      <div class="row">
        <div class="col-lg-6">
          <a href={{this.link}} target="_blank">
            <h4 class="title">{{this.title}}</h4>
          </a>
        </div>
        <div class="col-lg-2">{{this.author}}
        </div>
        <div class="col-lg-2">{{this.time}}
        </div>
        <div class="col-lg-2">
          <div>
            <button class="save" data-id={{this.id}}>Save Article</button>
          </div>
        </div>
      </div>
      {{/if}}
    {{/each}}

  </div>
</body>

</html>
